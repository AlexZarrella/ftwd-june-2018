<hr>
{{title}}
<hr>
<p>Plot:</p>
{{description}}
<hr>
<h2>Author:</h2>
{{author.name}} {{author.lastName}}
<p>{{author.birthday}}</p>
<p>{{author.nationality}}</p>
<hr>
Rating: {{rating}}
<hr>
<a href="/books/{{_id}}/edit">Edit This Book</a>


<form action="/books/{{_id}}/delete" method="post">
<button>Delete This Book</button>
</form>

<a href="/books/{{_id}}/reviews/new">Add a Review for This Book</a>


<div>
  <h2>Reviews For This Book</h2>
  <hr>
    {{#each reviews}}
        <h4>{{this.reviewer}}</h4>
        <p>{{this.content}}</p>
        <hr>
    {{/each}}
</div>